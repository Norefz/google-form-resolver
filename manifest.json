{
  "manifest_version": 3,
  "name": "AI Education Assistant",
  "version": "1.0",
  "description": "Asisten AI untuk membantu menjawab Google Forms",
  "host_permissions": ["http://localhost:3000/*"],
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content.js"]
    }
  ]
}
